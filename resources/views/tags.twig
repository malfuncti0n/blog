{% extends 'templates/app.twig' %}

{% block content %}

<div class="row">

    <div class="dual-list list-left col-md-8">
        <div class="well text-right">
            <ul class="list-group">
                {% for tag in tags %}
                <li class="list-group-item"><a href="{{ path_for('tag.single',{'value': tag.slug}) }}" target="_blank">{{ tag.value }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    {% include 'templates/partials/sidebar.twig' %}

</div>
    {#pagination#}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item {{ currentPage < 2 ? ' disabled' : '' }}">
                        <a class="page-link" href="
                            {% if currentPage < 2 %}
                                 #
                             {% else %}
                            {{  path_for('tags.page',{'number': currentPage-1}) }}
                            {% endif %}" tabindex="-1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="{{ path_for('tags.page',{'number': currentPage}) }}">{{ currentPage }} <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item {{ currentPage >= tagPages ? ' disabled' : '' }}">
                        <a class="page-link" href="
                            {%  if currentPage >=tagPages %}
                                 #
                            {%  else %}
                            {{ path_for('tags.page',{'number': currentPage+1}) }}
                            {% endif %}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>



{% endblock %}