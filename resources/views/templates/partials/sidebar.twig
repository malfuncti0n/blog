<div class="col-md-4">

    <div class="well text-center">
        <p class="lead">
            Don't want to miss updates? Please click the below button!
        </p>
        <a href="{{ path_for('rss') }}" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-heart"></span> Subscribe to our rss</a>
    </div>

    <!-- Latest Posts -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Latest Posts</h4>
        </div>
        <ul class="list-group">
            {%   for latestPost in latestPosts %}
                <li class="list-group-item"><a href="{{ path_for('post.index',{'title': latestPost.slug}) }}">{{ loop.index }}. {{ latestPost.title|slice(0, 35) }}</a></li>
            {% endfor %}
        </ul>
    </div>

