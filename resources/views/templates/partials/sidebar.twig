    <div class="panel panel-default">
        <div class="panel-heading">
            <h4><a href="{{ path_for('tags') }}">Tags</a></h4>
        </div>
        <div class="panel-body">
            <ul class="list-inline">
                {#{{ dump(mostUsesTags) }}#}
                {% for mostUsesTag in mostUsesTags %}
                    <li><a href="{{ path_for('tag.single',{'value': mostUsesTag.slug}) }}">{{ mostUsesTag.value }}</a></li>
